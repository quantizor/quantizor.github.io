{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*", "./public/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "types": ["vinxi/client", "vite/client"]
  }
}
